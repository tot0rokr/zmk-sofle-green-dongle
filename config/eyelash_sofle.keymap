        LHomerowLayer {
            bindings = <
&trans        &kp N6         &kp N7         &kp N8         &kp N9         &kp N0       &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans        &kp LC(LA(Z))  &kp LC(LA(X))  &kp LC(LA(A))  &kp LA(LC(S))  &kp LC(Y)    &trans  &trans  &trans  &trans  &trans  &trans  &trans
&kp CAPSLOCK  &kp LGUI       &kp LCTRL      &kp LSHFT      &kp LALT       &kp TAB      &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans        &trans         &trans         &trans         &trans         &trans       &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans        &trans         &trans         &trans         &trans         &trans       &trans  &trans  &trans  &trans  &trans  &trans
            >;

            label = "LHomerowLayer";
        };

        RThumbLayer {
            bindings = <
&none  &none                      &none                    &none                      &none                      &none                         &msc SCRL_UP     &none                       &none                      &none                       &none                      &none                      &none
&none  &homerow_tap_mods EXCL N1  &homerow_tap_mods AT N2  &homerow_tap_mods HASH N3  &homerow_tap_mods DLLR N4  &homerow_tap_mods PRCNT N5    &msc SCRL_DOWN   &homerow_tap_mods CARET N6  &homerow_tap_mods AMPS N7  &homerow_tap_mods ASTRK N8  &homerow_tap_mods LPAR N9  &homerow_tap_mods RPAR N0  &none
